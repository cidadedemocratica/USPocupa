<h2>Incluir nova imagem</h2>
<% form_for :imagem,
            :url => { :controller => "imagens",
                      :action => "create"
                    },
            :html => { :multipart => true } do |f| %>
  <%= hidden_field_tag "topico[id]", @topico.id %>
  <%= render :partial => "form_imagem", :locals => { :f => f } %>
  <p>
    <%= submit_tag "Salvar" %> ou
    <%= link_to "Voltar", topico_url(:topico_slug => @topico.slug) %>
  </p>
<% end %>